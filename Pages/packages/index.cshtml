@page
@{
    var q = Request.Query["q"].FirstOrDefault() ?? "";
    var results = await PackagesSearchResults.GetAsync (q);
    ViewData["Title"] = "Packages";
    ViewData["q"] = q;
}

<h1>Packages</h1>

@if (results != null) {
    if (results.Error != null) {
        <p>@results.Error</p>
    }
    <ul class="media-list">
    @foreach (var r in results.Results) {
        <li class="media">
            <div class="media-left">
                <a href="/packages/@Uri.EscapeDataString(@r.PackageId)">
                    <img src="@r.IconUrl" width="64" height="64" />
                </a>
            </div>
            <div class="media-body">
                <h4><a href="/packages/@Uri.EscapeDataString(@r.PackageId)">@r.PackageId</a> by @r.Authors</h4>
                <p style="max-height:3em;overflow:scroll">@r.Description</p>
            </div>
        </li>
    }
    </ul>
}
